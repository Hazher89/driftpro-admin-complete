{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix "$RESOURCE_DIR" run build"
    ]
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
